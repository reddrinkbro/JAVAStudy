import java.util.*;

public class Test3 {
	public static void main(String[] args)
	{
		String msg = "Hello";
		//System.out.println(msg.charAt(5));
		
		//charAt(index)
		//문자열변수에 있는 값중에 해당 위치에 있는 문자형 데이터를 가져온다.
		
		msg = "abcde";
		//해당 변수 3번방에 있는 (index = 3) 값에 따라서 각각 다른 메세지를 출력
		char data = (msg.charAt(3) >= 'A' && msg.charAt(3)<='Z')? (char)msg.charAt(3) : (char)(msg.charAt(3) -'A' + 'a');
		switch (data) {
		case 'A':
			System.out.println("Apple");
			break;

		default:
			break;
		}
	}
}
