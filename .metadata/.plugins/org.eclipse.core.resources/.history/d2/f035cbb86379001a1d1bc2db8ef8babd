
public class test2 {

	public static void main(String[] args) {
		// 제어문 활용(분기문, 반복문)
		//1~10 홀수, 짝수의 합을 각각계산후 출력 for
		int sumEven =0;
		int sumOdd =0;
		for (int i = 1; i <= 10; i++) {
			if(i % 2 == 1){
				sumOdd += i;
			}
			else{
				sumEven += i;
			}
		}
		System.out.println("홀수의 합 : " + sumOdd + " 짝수의 합 : " + sumEven);
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				if(j < 5){
					if(i >= j)System.out.print("*");
				}
				else{
					if(i <= j)System.out.print("*");
				}
			}
			System.out.println();
		}
	}

}
