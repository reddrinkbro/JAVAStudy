
public class Test1 {

	public static void main(String[] args) {
		//while()문
		/*while(조건식){
			반복할 코드
			증감식
		}*/
		
		//1 ~ 10까지 출력
		for(int i = 1 ; i <= 10; i++ )
		{
			System.out.print(i + " ");
		}
		System.out.println();
		int a = 1;
		while(a<=10){
			System.out.print(a++ + " ");
		}
		System.out.println("\n-----------------------------------------");
		a = 1;
		while(a<=10){
			System.out.print(a + " ");
			a+=2;
		}
		System.out.println("\n-----------------------------------------");
		for (int i = 0; i < 18; i++) {
			for (int j = 0; j < 18; j++) {
				if(j < 9)
				{
					if(i <= j) System.out.print("*");
					else System.out.print(" ");
				}
				else{
					if(i >= j) System.out.print("*");
					else System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
